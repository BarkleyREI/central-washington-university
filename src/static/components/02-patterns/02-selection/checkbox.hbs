{{#if items}}
<fieldset>
	{{#if legend}}<legend class="show-for-sr">{{{ legend }}}</legend>{{/if}}
	{{#if help-before}}<div class="form__help-message">{{{ help-before }}}</div>{{/if}}
	{{#each items}}
	<div class="form__field{{#if style}} {{style}}{{/if}}">
		<input id="{{ id }}{{#if formkey}}-{{formkey}}{{/if}}-{{@key}}" name="{{ name }}[]" type="checkbox" value="{{{ value }}}"{{#if checked}} checked="checked"{{/if}} />
		<label for="{{ id }}{{#if formkey}}-{{formkey}}{{/if}}-{{@key}}">
			{{#if label}}{{{ label }}}{{else}}{{{ value }}}{{/if}}
			<span class="checkbox" role="none">{{svg "check"}}</span>
		</label>
	</div>
	{{/each}}
	{{#if help-after}}<div class="form__help-message">{{{ help-after }}}</div>{{/if}}	
</fieldset>
{{/if}}
