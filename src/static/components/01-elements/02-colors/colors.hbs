{{#if colors}}
	<div class="w-1/2 grid gap-3 grid-cols-1">
		{{#each colors}}
			<div class="overflow-hidden rounded bg-gray-100 border-solid border-1 border-gray-400 flex">
				<span class="w-1/3" style="background-color: {{hex}}"></span>
				<span class="w-full px-4 py-2">
					<p><strong>{{ varname }}</strong></p>
					<p><em>{{ hex }}</em></p>
				</span>
			</div>
		{{/each}}
	</div>
{{/if}}